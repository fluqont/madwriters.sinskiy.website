---
import { links } from "../consts";
const currentPath = Astro.url.pathname.split("/")[1];
---
<nav class="hidden xl:flex flex-col gap-4 text-base md:text-xl items-center justify-between xl:justify-normal mx-auto max-w-fit text-primary flex-wrap">
  {
    links.map((link) => (
      <a
        title={link.title}
        href={link.href ?? `/${link.name}`}
        class:list={[(link.href ? (link.href === "/" ? "" : link.href.replace("/", "")) : link.name) === currentPath ? "bg-secondary text-onSecondary hover:brightness-125" : "hover:bg-surface", "transition-all whitespace-nowrap gap-2 xl:mx-4 text-center capitalize h-12 flex items-center justify-center min-w-full rounded-full px-8 sm:px-12 xl:px-0"]}
      >
        <svg width="16" height={link.height ?? "16"} viewBox={link.viewbox ?? "0 0 16 16"} fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d={link.path} />
        </svg>
        {link.name.replace("-", " ")}
      </a>
    ))
  }
</nav>