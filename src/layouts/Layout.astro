---
import '../styles/global.css';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import Header from "../components/Header.astro";
import BaseHead from '../components/BaseHead.astro';
import AuthorsNav from '../components/AuthorsNav.astro';
import AuthorsNavMobile from "../components/AuthorsNavMobile.astro"

const { bodyClass } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
  </head>
  <body class:list={[bodyClass, "background flex flex-col m-4 xl:mx-[20%] gap-16"]}>
    <Header />
    <div class="flex flex-col xl:flex-row gap-16">
      <AuthorsNav />
      <AuthorsNavMobile />
      <main class="w-full">
        <section class="flex flex-col gap-4">
          <slot />
          <slot name="posts" />
          <slot name="after" />
        </section>
      </main>
    </div>
  </body>
</html>
<style is:global>
  ul#posts {
    @apply flex flex-col gap-4;
  }
</style>